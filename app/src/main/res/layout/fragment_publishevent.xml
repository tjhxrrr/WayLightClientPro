<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:id="@+id/addeventtime"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@color/qmui_config_color_white"
            android:gravity="center"
            android:orientation="horizontal"
            app:qmui_borderColor="?attr/qmui_config_color_separator"
            app:qmui_outerNormalColor="?attr/qmui_config_color_background"
            app:qmui_showBorderOnlyBeforeL="true"
            app:qmui_shadowAlpha="0.1"
            app:qmui_shadowElevation="14dp"
            app:qmui_radius="4dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="8dp"
                android:hint="时间"
                android:textSize="15sp"
                android:background="@null"/>
        </com.qmuiteam.qmui.layout.QMUILinearLayout>

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:id="@+id/addeventlocation"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/qmui_config_color_white"
            android:gravity="center"
            android:orientation="horizontal"
            app:qmui_borderColor="?attr/qmui_config_color_separator"
            app:qmui_outerNormalColor="?attr/qmui_config_color_background"
            app:qmui_showBorderOnlyBeforeL="true"
            app:qmui_shadowAlpha="0.1"
            app:qmui_shadowElevation="14dp"
            app:qmui_radius="4dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="8dp"
                android:hint="搜地点"
                android:textSize="15sp"
                android:background="@null"/>
        </com.qmuiteam.qmui.layout.QMUILinearLayout>

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:id="@+id/addeventdiscription"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/qmui_config_color_white"
            android:gravity="center"
            android:orientation="horizontal"
            app:qmui_borderColor="?attr/qmui_config_color_separator"
            app:qmui_outerNormalColor="?attr/qmui_config_color_background"
            app:qmui_showBorderOnlyBeforeL="true"
            app:qmui_shadowAlpha="0.1"
            app:qmui_shadowElevation="14dp"
            app:qmui_radius="4dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:hint="描述信息"
                android:textSize="15sp"
                android:background="@null"/>
        </com.qmuiteam.qmui.layout.QMUILinearLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:textSize="15sp"
            android:textColor="@color/qmui_config_color_gray_2"
            android:text="添加标签："/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="37dp"
            android:orientation="horizontal">


            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_radio_button_spec"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:checked="false"
                android:text="赛事"
                android:textColor="@color/selector_radio_button_spec"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/selector_radio_button_spec"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:checked="false"
                android:text="演出"
                android:textColor="@color/selector_radio_button_spec"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/selector_radio_button_spec"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:checked="false"
                android:text="讲座"
                android:textColor="@color/selector_radio_button_spec"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="37dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_radio_button_spec"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:checked="false"
                android:text="招聘"
                android:textColor="@color/selector_radio_button_spec"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/selector_radio_button_spec"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:checked="false"
                android:text="跑腿"
                android:textColor="@color/selector_radio_button_spec"/>
            <RadioButton
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/selector_radio_button_spec"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:checked="false"
                android:text="展览"
                android:textColor="@color/selector_radio_button_spec"/>
        </LinearLayout>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_next"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:padding="10dp"
            android:text="发布"
            android:textColor="@color/qmui_config_color_white"
            android:textSize="15dp"
            app:qmui_backgroundColor="@color/app_color_blue"
            app:qmui_borderColor="@color/qmui_config_color_white"
            app:qmui_borderWidth="1px"
            app:qmui_radius="4dp" />

    </LinearLayout>


</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>
