<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:id="@+id/username"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@color/qmui_config_color_white"
            android:gravity="center"
            android:orientation="horizontal"
            app:qmui_borderColor="?attr/qmui_config_color_separator"
            app:qmui_outerNormalColor="?attr/qmui_config_color_background"
            app:qmui_showBorderOnlyBeforeL="true"
            app:qmui_shadowAlpha="0.1"
            app:qmui_shadowElevation="14dp"
            app:qmui_radius="4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="8dp"
                android:textSize="15dp"
                android:text="时间:17:00-18:00, 2019/9/16"
                android:background="@null"/>
        </com.qmuiteam.qmui.layout.QMUILinearLayout>

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:id="@+id/Email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/qmui_config_color_white"
            android:gravity="center"
            android:orientation="horizontal"
            app:qmui_borderColor="?attr/qmui_config_color_separator"
            app:qmui_outerNormalColor="?attr/qmui_config_color_background"
            app:qmui_showBorderOnlyBeforeL="true"
            app:qmui_shadowAlpha="0.1"
            app:qmui_shadowElevation="14dp"
            app:qmui_radius="4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="8dp"
                android:text="位置:珞珈山综合超市中通快递"
                android:textSize="15sp"
                android:background="@null"/>
        </com.qmuiteam.qmui.layout.QMUILinearLayout>

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:id="@+id/Password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@color/qmui_config_color_white"
            android:gravity="center"
            android:orientation="horizontal"
            app:qmui_borderColor="?attr/qmui_config_color_separator"
            app:qmui_outerNormalColor="?attr/qmui_config_color_background"
            app:qmui_showBorderOnlyBeforeL="true"
            app:qmui_shadowAlpha="0.1"
            app:qmui_shadowElevation="14dp"
            app:qmui_radius="4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="详细描述：求一代取快递送到信息学部11舍，体积不大！！"
                android:textSize="15sp"
                android:background="@null"/>
        </com.qmuiteam.qmui.layout.QMUILinearLayout>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_addevent"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:clickable="true"
            android:padding="10dp"
            android:text="添加到日程"
            android:textColor="@color/qmui_config_color_white"
            android:textSize="15dp"
            app:qmui_backgroundColor="@color/app_color_blue"
            app:qmui_borderColor="@color/qmui_config_color_white"
            app:qmui_borderWidth="1px"
            app:qmui_radius="4dp" />

    </LinearLayout>


</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>
